<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#502A57"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Player2Intent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#C9AECD"
        android:layout_margin="10dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
           android:orientation="vertical"
            android:layout_margin="20dp"

            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="By"
                android:textColor="#502A57"
                android:textStyle="bold"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Safia Ahmed"
                android:textColor="#502A57"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#502A57"
                android:text="ID: 181-15-1786"
                android:textStyle="bold"
                android:textSize="20dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center">
            <Button
                android:id="@+id/Return"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:onClick="returnAbut"
                android:text="Return"
                android:textSize="30dp"

                android:textColor="#C9AECD"
                android:textStyle="bold"
               android:background="@drawable/button_style"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



